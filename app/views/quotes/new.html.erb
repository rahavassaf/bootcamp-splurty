<h1>Enter Your Quote Details</h1>

<% if @success == 'true' %>
<%= simple_format("Successfully added quote to database", class: 'success') %>
<% else %>
<%= simple_format(" ", class: 'nuetral') %>
<% end %>

<%= simple_form_for @quote do |f| %>
  <%= f.input :saying %>
  <%= f.input :author %>
  <br><br>
  <%= f.submit 'Create', class: 'btn btn-danger' %>
<% end %>