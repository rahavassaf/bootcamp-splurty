<div class="row tableheader">
	<div class="col-3">Author</div>
	<div class="col-5">Quote</div>
	<div class="col-2">Youtube ID</div>
	<div class="col-sm-1">ID</div>
</div>


<% @all.each do |quote| %>
	<div class="row tablerow">
		<div class="col-3 text-nowrap flexwrap"><%= quote.author %></div>
	
		<div class="col-5 text-nowrap flexwrap"><%= quote.saying %></div>

		<div class="col-2">
		<%= link_to_if(quote.youtube_id != '', quote.youtube_id, "https://youtube.com/watch?v=#{quote.youtube_id}", target: :_blank) %>
		</div>

		<div class="col-sm-1">
			<%= quote.id %>
		</div>

		<div class="col-sm-1">
			<%= button_to "", { action: "destroy", id: quote.id }, method: :delete, class: "deletebutton" %>
		</div>
	</div>
<% end %>

